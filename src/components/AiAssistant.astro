<section class="max-w-3xl mx-auto py-12 px-6">
  <div
    class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden h-[500px] flex flex-col"
  >
    <!-- Header -->
    <div class="p-4 border-b border-gray-100 bg-gray-50 text-center">
      <h3 class="font-bold text-gray-800">Otto's Portfolio Assistant</h3>
    </div>

    <!-- Chat History -->
    <div
      id="chat-history"
      class="flex-1 overflow-y-auto p-4 space-y-4 bg-white"
    >
      <!-- Messages inject here -->
      <div class="flex gap-3">
        <div
          class="w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center text-xs"
        >
          ðŸ¤–
        </div>
        <div
          class="bg-gray-100 p-3 rounded-2xl rounded-tl-none text-sm text-gray-700"
        >
          Hello! Ask me anything about Otto's work, skills, and experience.
        </div>
      </div>
    </div>

    <!-- Input -->
    <div class="p-4 border-t border-gray-100 bg-gray-50 flex gap-2">
      <input
        type="text"
        id="chat-input"
        placeholder="Type a question..."
        class="flex-1 bg-white border border-gray-300 rounded-full px-4 py-2 text-sm focus:outline-none focus:border-indigo-500"
      />
      <button
        id="send-btn"
        class="bg-black text-white px-4 py-2 rounded-full text-sm font-bold hover:opacity-80"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 12 3.269 3.126A59.768 59.768 0 0 1 21.485 12 59.77 59.77 0 0 1 3.27 20.876L5.999 12Zm0 0h7.5"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</section>

<style is:global>
  /* Loading Dots Animation */
  .typing-dot {
    animation: typing 1.4s infinite ease-in-out both;
    background-color: #9ca3af; /* gray-400 */
    border-radius: 9999px;
    height: 0.375rem; /* 1.5 */
    width: 0.375rem; /* 1.5 */
  }
  .typing-dot:nth-child(1) {
    animation-delay: -0.32s;
  }
  .typing-dot:nth-child(2) {
    animation-delay: -0.16s;
  }

  @keyframes typing {
    0%,
    80%,
    100% {
      transform: scale(0);
    }
    40% {
      transform: scale(1);
    }
  }
</style>

<script>
  import { marked } from "marked";
  const apiKey = import.meta.env.PUBLIC_GEMINI_API_KEY; // Requires .env setup
  const context = import.meta.env.PUBLIC_AI_CONTEXT.replace(/\\n/g, "\n");

  const historyDiv = document.getElementById("chat-history");
  const input = document.getElementById("chat-input") as HTMLInputElement;
  const btn = document.getElementById("send-btn");

  async function sendMessage() {
    const text = (input as HTMLInputElement).value.trim();
    if (!text) return;

    // 1. Add User Message
    addMessage(text, "user");
    (input as HTMLInputElement).value = "";

    // 2. Add Loading Indicator
    const loadingId = addLoadingIndicator();

    // 3. Call API
    try {
      const response = await fetch(
        `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`,
        {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            contents: [{ parts: [{ text: text }] }],
            systemInstruction: { parts: [{ text: context }] },
          }),
        }
      );
      const data = await response.json();
      const reply = data.candidates[0].content.parts[0].text;

      // 4. Remove Loader & Add Bot Message
      document.getElementById(loadingId)?.remove();
      addMessage(marked.parse(reply), "bot");
    } catch (e) {
      document.getElementById(loadingId)?.remove();
      addMessage("Error connecting to AI.", "bot");
    }
  }

  function addMessage(text, sender) {
    const div = document.createElement("div");
    div.className = `flex gap-3 ${sender === "user" ? "flex-row-reverse" : ""}`;

    const bubble = document.createElement("div");
    bubble.className = `p-3 rounded-2xl text-sm max-w-[80%] ${
      sender === "user"
        ? "bg-black text-white rounded-tr-none"
        : "bg-gray-100 text-gray-800 rounded-tl-none prose prose-sm"
    }`;

    if (sender === "bot") bubble.innerHTML = text;
    else bubble.innerText = text;

    div.appendChild(bubble);
    historyDiv.appendChild(div);
    historyDiv.scrollTop = historyDiv.scrollHeight;
  }

  function addLoadingIndicator() {
    const id = "loading-" + Date.now();
    const div = document.createElement("div");
    div.id = id;
    div.className = "flex gap-3";

    // Bot Icon
    const icon = document.createElement("div");
    icon.className =
      "w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center text-xs";
    icon.innerText = "ðŸ¤–";

    // Bubble with dots
    const bubble = document.createElement("div");
    bubble.className =
      "bg-gray-100 p-4 rounded-2xl rounded-tl-none border border-gray-200 flex gap-1 items-center";
    bubble.innerHTML = `
      <div class="typing-dot"></div>
      <div class="typing-dot"></div>
      <div class="typing-dot"></div>
    `;

    div.appendChild(icon);
    div.appendChild(bubble);
    historyDiv.appendChild(div);
    historyDiv.scrollTop = historyDiv.scrollHeight;

    return id;
  }

  if (btn && input) {
    btn.addEventListener("click", sendMessage);
    input.addEventListener("keypress", (e) => {
      if (e.key === "Enter") sendMessage();
    });
  }
</script>
